<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/activity_user_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:contentDescription="@string/register_icon"
            android:src="@drawable/roboticon"
            />

        <EditText
            android:id="@+id/activity_user_robot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/activity_user_icon"
            android:layout_marginEnd="@dimen/activity_vertical_margin"
            android:layout_marginTop="19dp"
            android:layout_toEndOf="@+id/activity_user_icon"
            android:hint="@string/robot_name"
            />

        <EditText
            android:id="@+id/activity_user_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_user_icon"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="20dp"
            android:enabled="false"
            android:hint="@string/register_user"
            />


        <EditText
            android:id="@+id/activity_user_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_user_user"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="20dp"
            android:hint="@string/register_password"
            android:inputType="textPassword"
            />

        <EditText
            android:id="@+id/activity_user_password2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_user_password"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="20dp"
            android:hint="@string/register_password2"
            android:inputType="textPassword"
            />

        <RadioGroup
            android:id="@+id/activity_user_sex"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_below="@id/activity_user_password2"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            >

            <RadioButton
                android:id="@+id/activity_user_boy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="@string/register_boy"
                />

            <RadioButton
                android:id="@+id/activity_user_girl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/register_girl"
                />
        </RadioGroup>

        <Button
            android:id="@+id/activity_user_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_user_sex"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="20dp"
            android:text="@string/save"
            />

        <Button
            android:id="@+id/activity_user_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_user_save"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="20dp"
            android:text="@string/cancel"
            />

    </RelativeLayout>
</layout>